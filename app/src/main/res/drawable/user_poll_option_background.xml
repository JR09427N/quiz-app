<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/> <!-- semi-transparent black for shadow -->
            <corners
                android:topLeftRadius="18px"
                android:topRightRadius="18px"
                android:bottomLeftRadius="18px"
                android:bottomRightRadius="18px"/>
        </shape>
    </item>

    <!-- Main button background, shifted up and left to reveal shadow at bottom/right -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/>
            <stroke android:color="#888888" android:width="0.1dp"/>
            <corners
                android:topLeftRadius="18px"
                android:topRightRadius="18px"
                android:bottomLeftRadius="18px"
                android:bottomRightRadius="18px"/>
        </shape>
    </item>

</layer-list>
